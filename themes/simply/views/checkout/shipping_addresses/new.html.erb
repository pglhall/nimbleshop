<% page_title 'Shipping address' %>
<%= javascript_tag do %>
  window.countryStateCodes = <%= grouped_options_for_country_state_codes.to_json.html_safe %>;
<% end %>

<div class='span7'>
  <%= form_for(current_order, url: checkout_shipping_address_path, html: {class: 'form-horizontal'}) do |f| %>
    <%= render 'error', f: f %>
    <%= render 'contact_information', f: f %>
    <%= render 'shipping_address',    f: f, countries: @countries %>
    <%= render 'billing_address',     f: f, countries: @countries %>
    <div class="form-actions">
      <%= f.submit 'Submit', class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>

<%= render 'shared/order_summary' %>
